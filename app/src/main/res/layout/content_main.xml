<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="my.webs2canada.paytrail.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_main">

    <EditText
        android:id="@+id/Hour_Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/enter_hours"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="73dp" />


    <EditText
        android:id="@+id/Overtime_Box"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Enter Overtime Hours"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/check_if_you_want_to_enter_overtime"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="191dp" />

    <EditText
        android:id="@+id/Rate_Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/enter_rate"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="241dp" />


    <EditText
        android:id="@+id/state_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter State Holiday"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/Calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/calculate"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="340dp" />




</LinearLayout>
